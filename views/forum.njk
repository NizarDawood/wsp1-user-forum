{% extends "layout.njk" %}
{% block content %}
<main class="container mt-3">
    <h1>{{ title }}</h1>
    <p>Username: {{ name }}</p>
</div>
<nav class="primary-nav">
    <ul role="list" class="nav-list flex-group">
        <li role="listitem"><a href="/blog/">BLOG</a></li>
        <li role="listitem"><a href="/about/">ABOUT</a></li>
        <button type="submit"><a href="/logout">Logout</a></button>
    <button type="submit"><a href="/profile">profile</a></button>
    <button type="submit"><a href="/new">new</a></button>
    </ul>
</nav>
</div>
    
    

{% for row in rows %}
    <section>
        {{ row.id }} {{ row.authorId }} {{ row.author }}
        <h1>{{ row.title }}</h1>
        <p>{{ row.content }}</p>
        <p>Created {{ row.createdAt }}</p>
        <p>{{ row.name }}</p>
    </section>
    {% endfor %}
    
</main>
{% endblock %}